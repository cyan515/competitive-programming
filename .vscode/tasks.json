{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "/usr/local/bin/g++-14",
            "args": [
                "-std=gnu++23",
                "-Wall",
                "-Wextra",
                "-Wshadow",
                "-I/opt/boost/gcc/include",
                "-L/opt/boost/gcc/lib",
                "-I${workspaceFolder}/ac-library",
                "-o",
                "${workspaceFolder}/problem.exe",
                "${file}",
                "-g",
                "-fno-inline",
                "-O0"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
